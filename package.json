  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nexa-os.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/nexa-os/issues"
  },
  "homepage": "https://yourusername.github.io/nexa-os",
  "devDependencies": {
    "serve": "^14.2.0",
    "live-server": "^1.2.2",
    "lighthouse": "^11.0.0",
    "@web/pwa-checker": "^1.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
